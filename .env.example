# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=activity_platform
DB_USER=api_user
DB_PASSWORD=changeme

# JWT (from Auth API)
JWT_SECRET=your-secret-key-here
JWT_ALGORITHM=HS256

# Internal Service Auth
SERVICE_TOKEN=shared-secret-token

# Redis (for rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# API Settings
API_V1_PREFIX=/api/v1
PROJECT_NAME=Activity Platform - Notifications API
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
CORS_ORIGINS=*

# ===== API Documentation (Swagger UI / OpenAPI) =====
# Enable/disable Swagger UI and OpenAPI endpoints
# IMPORTANT: Set to false in production for security (prevents API enumeration)
# Development: true (developers need API documentation)
# Staging: true (QA team needs to verify API behavior)
# Production: false (security best practice)
ENABLE_DOCS=true
API_VERSION=1.0.0

# Email API (optional)
EMAIL_API_URL=http://email-api:8000
EMAIL_API_KEY=email-api-key
